{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["dom", "es6", "es5"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "stripInternal": true,
    "target": "es5",
    "outDir": "build/tmp",
    "listFiles": false,
    "listEmittedFiles": false
  },
  "exclude": [
    "build",
    "node_modules"
  ]
}
